<div class="devise-main">
    <div class="devise-main-inner">
        <div class="login-container">
            <div class="login">
                <h4>Forgot your password?</h4>
            </div>
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <div class="row">
                <%= devise_error_messages! %>
            </div>

            <div class="row">
                <%= f.label :email %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "me@email.com" %>
            </div>

            <div class="row">
                <p><%= "Send me reset password instructions" %> </p>
                <%= f.submit "Submit", id:'btn'%>
            </div>
            <% end %>
            <div class="">
                <%= render "devise/shared/links" %>
            </div>
        </div>
    </div>
</div>