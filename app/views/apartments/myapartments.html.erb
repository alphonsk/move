<div class="header">
    <div class="header-top">
      <span> <%= @apartments.count %> </span>
    </div>
    <div class="header-middle"> 
        <div class="header-middle-left">
            Apartments  
        </div>
        <div class="header-middle-right">
          <% if current_user %> 
            <% if current_user.apartments.count > 0 %> 
            <%=  link_to raw('New '+ ' <i class="fa fa-plus-square"></i> ') , new_apartment_path() %>  
          <% end %> 
          <% end %> 
        </div>
    </div>
</div>
 


<div class="apartment-container">
    <% @apartments.each do |apartment| %>
    <div class="each-apartment">
        <div class="each-apartment-header">
            <div class="each-apartment-header-left">
                <%= apartment.city %> <span class="apt-show-title "><%= apartment.state %></span>
            </div>
            <div class="each-apartment-header-right">
                <i class="fa fa-bookmark"></i>
            </div>
        </div>

        <div class="each-apartment-image"> 
            <% if apartment.apartment_detail.pictures.attached? %>
            <%= image_tag(apartment.apartment_detail.pictures.first) %>
            <% apartment.apartment_detail.pictures.each do |image| %>
            <%= link_to image_tag(image, style:"width:100%" , id: 'userShowHeaderImg' ), apartment_path(apartment.id)%> 
            <% end %>
            <% end %> 
        </div>

        <div class="each-apartment-body">
            <div class="apartment-type-cost">
                <ul>
                    <li>
                        <span class="apartment-value"> $<%= apartment.apartment_detail.rent %>/m</span>&nbsp 
                    </li>
                    <li>
                    <%= apartment.apartment_detail.bedrooms %>.BR &nbsp 
                    </li> 
                               <li>
                    <%= apartment.apartment_detail.bathrooms %>.BA &nbsp 
                    </li>
                               <li>
                    <%= truncate(apartment.apartment_detail.housing_type , length: 8) %> 
                    </li>
                </ul>
            </div>

            <div class="apartment-description">
                <div class=" ">
                      <%= apartment.apartment_detail.description %>
                </div> 
            </div>

            <div class="each-apartment-body-bottom">
                <div class="apartment-bttns">
                    <%= link_to apartment_path(apartment.id) do %>
                    <div class="apartment-details"> Details </div>
                    <% end %> 
                </div>
            </div>
        </div>
    </div>
    <% end %>
</div>




<div class="apartment-index">
    <div class="apartment">
 
    </div>
</div>
